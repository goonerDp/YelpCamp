
<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= campground.name %></h1>
        <div class="form-wrapper">
            <form method="POST" action="/campgrounds/<%= campground._id %>?_method=PUT">
                <div class="form-group">
                    <input type="text" value="<%= campground.name %>" name="campground[name]" class="form-control">
                </div>
                <div class="form-group">
                    <input type="number" value="<%= campground.price %>" name="campground[price]" class="form-control" min="0.00" step="0.01">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <input type="text" value="<%= campground.image %>" name="campground[image]" class="form-control">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="campground[description]"><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>